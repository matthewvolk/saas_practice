<!-- this file shows up on every page of our site -->
<!DOCTYPE html>
<html>
  <head>
    <title>TwoCents | Instant Tips From Professional Developers.</title>
    <%= csrf_meta_tags %>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          
          <%= link_to root_path, class: "navbar-brand" do %>
            <i class="fa fa-hand-scissors-o" aria-hidden="true"></i>
             TwoCents
          <% end %>
          
        </div>
        
        <div class "collapse navbar-collapse" id="main-nav-collapse">
          <ul class="nav navbar-nav navbar-right text-center">
            <li><%= link_to "About", about_path %></li>
          </ul>
        </div><!-- /.navbar-collapse -->
        
      </div><!-- end container -->
    </nav>
    
    <%= yield %> <!-- rails pulls in code from other /view/ files here -->
  
  </body>
</html>
